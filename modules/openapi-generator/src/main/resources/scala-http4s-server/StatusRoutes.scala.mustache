package {{invokerPackage}}

import cats.effect.Sync
import org.http4s.HttpRoutes
import org.http4s.dsl._

object StatusRoutes {
  def routes[F[_] : Sync]: HttpRoutes[F] = {
    val dsl = new Http4sDsl[F] {}
    import dsl._
    HttpRoutes.of[F] {
      case req @ GET -> Root / "status.html" => Ok("OK")
    }
  }
}